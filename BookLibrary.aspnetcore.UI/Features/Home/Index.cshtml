@model BookLibrary.aspnetcore.UI.Features.Home.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Dashboard</h1>
            </div>
        </div>
        <div class="row">
            <div>
                @await Component.InvokeAsync("DashboardPanel", Model.BooksPanel)
                @await Component.InvokeAsync("DashboardPanel", Model.AuthorsPanel)
                @await Component.InvokeAsync("DashboardPanel", Model.PublishersPanel)
            </div>
        </div>

        <div class="row">
                @Html.Partial("_chart")
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/dist/Features/Home/chart.js"></script>
}
